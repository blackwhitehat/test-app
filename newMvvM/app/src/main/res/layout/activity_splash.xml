<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Spl.Splash">




    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.pixelcan.inkpageindicator.InkPageIndicator
        android:layout_marginBottom="20dp"
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ipi_dotDiameter="8dp"
        app:ipi_dotGap="8dp"
        app:ipi_animationDuration="320"
        android:layout_alignParentBottom="true"

        app:ipi_pageIndicatorColor="#3D4045"
        app:ipi_currentPageIndicatorColor="@android:color/white"/>

    <TextView
        android:id="@+id/splash_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="بستن"
        android:textSize="20sp"
        android:onClick="ext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="40dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/row_lst_img"
        android:layout_width="50dp"
        android:layout_height="40dp"
          android:layout_marginRight="20dp"
            android:layout_marginBottom="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
         app:civ_circle_background_color="#3D4045"
        android:src="@drawable/ic_arrow"
        />

    <Button
        android:id="@+id/splash_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:background="@drawable/entery"
        android:text="ورود"
        android:layout_marginBottom="80dp"/>

</RelativeLayout>